---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
// import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
// import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
// import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Talha.Rana',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
   
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Hi <span class="hidden xl:inline">Welcome to my</span>
      <span class="text-accent dark:text-white highlight">World for</span> your Frontend Development
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold"></span> A passionate Software Engineering Frontend Developer with a knack for creating visually stunning and highly functional web applications. With a solid foundation in frontend technologies and a keen eye for design, I strive to build user-friendly interfaces that provide seamless experiences.</span
      >
     
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="My Skills"
    subtitle="Leveraging the latest technologies and best practices to create exceptional web applications."
    items={[
      {
        title: 'React.js Development',
        description:
          'Building dynamic and responsive web applications using the power of React.js to enhance user engagement.',
        icon: 'tabler:brand-react',
      },
      {
        title: 'Bootstrap & Tailwind CSS',
        description:
          'Utilizing Bootstrap and Tailwind CSS for fast and efficient design, ensuring responsive and visually appealing interfaces.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'JavaScript Expertise',
        description:
          'Crafting interactive and efficient web solutions with in-depth knowledge of JavaScript and modern frameworks.',
        icon: 'tabler:code',
      },
      {
        title: 'Laravel Backend Development',
        description:
          'Developing robust backend solutions with Laravel, ensuring seamless integration with frontend technologies.',
        icon: 'tabler:server',
      },
      {
        title: 'UI/UX Design',
        description:
          'Creating intuitive and user-friendly designs that enhance user experience and engagement.',
        icon: 'tabler:code',
      },
      {
        title: 'Continuous Improvement',
        description:
          'Staying up-to-date with the latest trends and technologies to deliver cutting-edge web solutions.',
        icon: 'tabler:trending-up',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
  isReversed
  tagline="About Me"
  title="A Journey in Web Development"
  items={[
    {
      title: 'Frontend Development',
      description:
        'Specializing in frontend technologies to create dynamic, responsive, and visually appealing web applications.',
    },
    {
      title: 'Backend Development',
      description:
        'Ensuring robust and scalable backend solutions to complement the frontend and deliver a seamless user experience.',
    },
    {
      title: 'Full-Stack Expertise',
      description:
        'Combining frontend and backend skills to deliver comprehensive and efficient web solutions.',
    },
  ]}
  image={{
    src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    alt: 'Web Development Image',
  }}
>

  <Fragment slot="content">
    <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on Modern Foundations</h3>
    Gain a competitive advantage by incorporating industry-leading practices and cutting-edge technologies in your projects.
  </Fragment>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
  </Fragment>
</Content>

<!-- Content Widget **************** -->

  <!-- Content Widget **************** -->

  <Content
  isAfterContent
  items={[
    {
      title: 'High level of customization',
      description: `Tailor your projects effortlessly to match your brand's identity and requirements, ensuring a unique and engaging user experience.`,
