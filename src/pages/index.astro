  <CallToAction
    title="Ready to Transform Your Digital Presence?"
    actions={[{ text: 'Contact Me', href: 'mailto:talha@example.com' }]}
  />

  <Content
  items={[
    { title: '5+ Years', description: 'of Experience in Web Development' },
    { title: '20+', description: 'Projects Completed' },
    { title: '100%', description: 'Client Satisfaction' },
    { title: '24/7', description: 'Availability' },
  ]}
/>

